@model List<Modelos.Contato>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="row" style="margin-bottom: 15px">
        <div class="col-md-12 text-right">
            <button type="button" onclick="removerElemento(this)" class="btn btn-danger btn-xs">Excluir</button>
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => Model[i].Conteudo)
            @Html.EditorFor(model => Model[i].Conteudo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model[i].Conteudo, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => Model[i].Tipo)
            @Html.RadioButtonFor(model => Model[i].Tipo, Modelos.TipoContato.Email) Email
            @Html.RadioButtonFor(model => Model[i].Tipo, Modelos.TipoContato.Celular) Celular
            @Html.RadioButtonFor(model => Model[i].Tipo, Modelos.TipoContato.TelefoneFixo) Telefone Fixo
        </div>
    </div>
}
