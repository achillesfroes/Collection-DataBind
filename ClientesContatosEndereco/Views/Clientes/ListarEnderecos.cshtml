@model List<Modelos.Endereco>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="row" style="margin-bottom: 15px">
        <div class="col-md-12 text-right">
            <button type="button" onclick="removerElemento(this)" class="btn btn-danger btn-xs">Excluir</button>
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => Model[i].Bairro)
            @Html.EditorFor(model => Model[i].Bairro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model[i].Bairro, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => Model[i].Logradouro)
            @Html.EditorFor(model => Model[i].Logradouro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model[i].Logradouro, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(model => Model[i].Complemento)
            @Html.EditorFor(model => Model[i].Complemento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model[i].Complemento, "", new { @class = "text-danger" })
        </div>
    </div>
}
